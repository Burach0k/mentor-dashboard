{
    "extends": ["airbnb", "prettier/react", "plugin:prettier/recommended"],

    "env": {
        "browser": true,
        "node": true
    },

    "globals": {
        "React": true
    },

    "parser": "babel-eslint",

    "plugins": ["prettier", "babel"],

    "rules": {
        "prettier/prettier": "error",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/destructuring-assignment": ["never"],
        "linebreak-style": 0
    }
}
